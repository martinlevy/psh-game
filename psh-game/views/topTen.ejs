<!DOCTYPE html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
    integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
    crossorigin="anonymous"></script>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <header>
        
        <h3>
            Welcome to the psh games
            <h3>
            <a href="/game/create" class="btn btn-success" >
                Create New Player
            </a>
        </h3>

        </h3>
    </header>
    
    <div class="accordion-item ">
        <% for (let i=0 ; i< usuarios.length; i++){ %>

            <h2 class="accordion-header  open" id="heading">
                <button class="accordion-button open" type="button" data-bs-toggle="open" data-bs-target="#open"
                    aria-expanded="false" aria-controls="open">
                    #<%=i+1 %>
                        <%=usuarios[i].nickname%>
                </button>
            </h2>
            <div id="open" class="accordion-open open" aria-labelledby="heading" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <img src="<%=usuarios[i].image%>" alt="">
                    <strong> Score: <%=usuarios[i].score%></strong>
                </div>
            </div>
            <% } %>
    </div>


</body>


<style>
    header {
        background-color: rgb(219, 219, 219);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-align: center;
        padding: 10px;
        color: rgb(100, 100, 100);


    }

    .accordion-button:not(.collapsed) {
        background-color: rgb(241, 241, 241);
        color: rgb(100, 100, 100);
    }
</style>

</html>